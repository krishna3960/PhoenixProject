<h1> Update form </h1>



<%= form_for @changeset, Routes.topic_context_path(@conn, :update, @topic_context), fn f ->%>
<div class ="form-group">
    <%= text_input f, :title, placeholder: "Title", class: "from-control" %>
    <%= error_tag f, :title %>
</div>

<%= submit "Save Topic", class: "btn btn-primary" %> 
<br>
<span><%= link "Back", to: Routes.topic_context_path(@conn, :index) %></span>
<% end %>

